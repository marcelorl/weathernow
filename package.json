{
  "name": "weathernow",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "axios-cache-adapter": "^2.1.1",
    "history": "^4.7.2",
    "localforage": "^1.7.3",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-cosmos": "^4.6.4",
    "react-cosmos-test": "^4.6.4",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.3",
    "react-test-renderer": "^16.7.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "redux-devtools-extension": "^2.13.7",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "babel-eslint": "9",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "husky": "^1.3.1",
    "jest-enzyme": "^7.0.1",
    "jest-styled-components": "^6.3.1",
    "react-cosmos-redux-proxy": "^4.6.1",
    "redux-mock-store": "^1.5.3",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "coverage": "npm test -- --coverage",
    "lint": "standard \"src/**/*.js\" --verbose | snazzy",
    "lint:fix": "standard \"src/**/*.js\" --fix --verbose | snazzy",
    "cosmos": "cosmos"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!<rootDir>/node_modules/",
      "!src/*.{js}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "URL",
      "fetch",
      "jest",
      "describe",
      "it",
      "xit",
      "xdescribe",
      "expect",
      "beforeEach",
      "FormData"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
